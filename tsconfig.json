{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": [
            "es6",
            "dom"
        ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/**/*.spec.ts"
    ]}